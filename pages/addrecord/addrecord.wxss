/* pages/addrecord/addrecord.wxss */
page{
  border: 1rpx red solid;
  

}
.navigate{
  height: 88rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: greenyellow;
}


.backbtn::after{

  border: none;

}

.title{
  width: 100%;
  text-align: center;
  padding-top:15rpx; 

}

.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-around;
}

.swiper-tab-item{
    width: 50%; 

   
}

.active{
  border-bottom: blue 8rpx solid;
}


.categorybtn{
  width: 85rpx;
  height: 120rpx;
  padding: 20rpx;

}


.isChosen{
  border: blue 5rpx solid;

  
}

.categoryImg{
  width:100%;
  height:70%;
  border-radius:50%;
}



.categoryList{
  display: flex;
  flex-wrap: wrap;
}

.typename{
  font-size:30rpx;
  display:block;
  width: 100%;
  height: 30%;
  text-align: center;
  
}

.money{
  width:100%;
  height:96rpx;
  display:flex;
  border-bottom: 2rpx solid #ccc;

}
.chargeText{
  line-height:96rpx;
  margin-left:20rpx;
  width: 20%;
}
#chargeInput{
  margin-left:35rpx;
  height:100%;
  text-align:center;
}

.done{
  background-color: greenyellow;
  width: 28%;
  text-align: auto;
  font-size: 35rpx;
  line-height: 96rpx;
  margin-right: 0rpx;
  border-radius: 0rpx;
  border: 0rpx;
}